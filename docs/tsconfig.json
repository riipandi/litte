{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "baseUrl": ".",
        "paths": {
            "#/*": ["./app/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
