{
	"name": "litte",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --filter=!docs",
		"dev:docs": "turbo run dev --filter=docs",
		"build:ui": "turbo run build --filter=@litte/*",
		"build:docs": "turbo run build --filter=docs",
		"build:storybook": "turbo run build --filter=storybook",
		"start": "turbo run start --filter=docs --filter=storybook",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"typecheck": "turbo run typecheck",
		"update-deps": "npm-check-updates --configFileName .ncurc.json"
	},
	"devDependencies": {
		"npm-check-updates": "^18.0.1",
		"prettier": "^3.5.3",
		"turbo": "^2.5.4",
		"typescript": "5.8.3"
	},
	"packageManager": "pnpm@10.12.1",
	"engines": {
		"node": ">=22"
	}
}
