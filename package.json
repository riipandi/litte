{
    "name": "litte-ui",
    "version": "0.0.0",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev:docs": "turbo run dev --filter=docs",
        "dev:storybook": "turbo run dev --filter=storybook",
        "dev": "turbo run dev --filter={storybook,@litte/themes,litte}",
        "build:docs": "turbo run build --filter=docs",
        "build:storybook": "turbo run build --filter=storybook",
        "build": "turbo run build --filter=@litte/* --filter=litte",
        "start": "turbo run start --filter=docs --filter=storybook",
        "cleanup": "turbo cleanup --cache=local:,remote: && pnpm -s cleanup:repo",
        "cleanup:repo": "pnpm dlx del-cli .turbo pnpm-lock.yaml node_modules",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "publish:npm": "turbo publish:npm --filter=@litte/* --filter=litte",
        "publish:npm-dry": "turbo publish:npm-dry --filter=@litte/* --filter=litte",
        "publish:jsr": "turbo publish:jsr --filter=@litte/* --filter=litte",
        "publish:jsr-dry": "turbo publish:jsr-dry --filter=@litte/* --filter=litte",
        "prepare:demo": "cat packages/litte-all-in-one/dist/umd/index.js > demo/litte.js",
        "demo": "pnpm -s prepare:demo && serve -p 3000 -d demo --no-clipboard --cors",
        "litte": "turbo run dev --filter=@litte/cli --log-prefix=none --no-daemon",
        "filter": "pnpm --silent --filter",
        "format": "biome format . --write",
        "lint": "turbo lint --cache=local:rw,remote:r",
        "check": "turbo check --cache=local:rw,remote:r",
        "typecheck": "turbo typecheck --cache=local:rw,remote:r"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "npm-check-updates": "^19.1.1",
        "serve": "^14.2.5",
        "turbo": "^2.5.8",
        "typescript": "catalog:"
    },
    "packageManager": "pnpm@10.19.0",
    "engines": {
        "node": ">=22"
    }
}
