{
    "name": "litte",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --filter=!docs",
        "dev:docs": "turbo run dev --filter=docs",
        "build:ui": "turbo run build --filter=@litte/*",
        "build:docs": "turbo run build --filter=docs",
        "build:storybook": "turbo run build --filter=storybook",
        "start": "turbo run start --filter=docs --filter=storybook",
        "cleanup": "turbo cleanup --cache=local:rw && pnpm dlx rimraf pnpm-lock.yaml node_modules",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "publish:dry": "turbo publish:dry --filter=@litte/* --cache=local:rw",
        "publish:npm": "turbo publish:npm --filter=@litte/* --cache=local:rw",
        "filter": "pnpm --silent --filter",
        "format": "biome format . --write",
        "lint": "turbo lint --cache=local:rw",
        "check": "turbo check --cache=local:rw",
        "typecheck": "turbo typecheck --cache=local:rw"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "npm-check-updates": "^18.0.1",
        "turbo": "^2.5.4",
        "typescript": "catalog:"
    },
    "packageManager": "pnpm@10.12.1",
    "engines": {
        "node": ">=22"
    }
}
