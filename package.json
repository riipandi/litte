{
    "name": "litte-ui",
    "version": "0.0.25",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev:docs": "turbo run dev --filter=docs",
        "dev:storybook": "turbo run dev --filter=storybook",
        "dev": "turbo run dev --filter={!docs,storybook,@litte/themes}",
        "build:docs": "turbo run build --filter=docs",
        "build:storybook": "turbo run build --filter=storybook",
        "build": "turbo run build --filter=@litte/* --filter=litte",
        "start": "turbo run start --filter=docs --filter=storybook",
        "cleanup": "turbo cleanup --cache=local:,remote: && pnpm -s cleanup:repo",
        "cleanup:repo": "pnpm dlx del-cli .turbo pnpm-lock.yaml node_modules",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "publish:dry": "turbo publish:dry --filter=@litte/* --filter=litte",
        "publish:npm": "turbo publish:npm --filter=@litte/* --filter=litte",
        "filter": "pnpm --silent --filter",
        "format": "biome format . --write",
        "lint": "turbo lint --cache=local:rw,remote:r",
        "check": "turbo check --cache=local:rw,remote:r",
        "typecheck": "turbo typecheck --cache=local:rw,remote:r"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "npm-check-updates": "^19.0.0",
        "turbo": "^2.5.8",
        "typescript": "catalog:"
    },
    "packageManager": "pnpm@10.18.1",
    "engines": {
        "node": ">=22"
    }
}
