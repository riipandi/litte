{
    "name": "@litte/button",
    "version": "0.0.0",
    "type": "module",
    "description": "UI components powered by Lit",
    "author": "Aris Ripandi <aris@duck.com>",
    "license": "MIT",
    "homepage": "https://litte.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/litte"
    },
    "bugs": {
        "url": "https://github.com/riipandi/litte/issues"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "rollup -c",
        "cleanup": "pnpm dlx rimraf dist node_modules .turbo",
        "publish:dry": "pnpm publish --dry-run --no-git-checks",
        "publish:npm": "pnpm publish --no-git-checks",
        "prepublishOnly": "pnpm -s build",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "clsx": "^2.1",
        "lit": "^3.0"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "lit": "^3.3.0"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@repo/typescript-config": "workspace:*",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.3",
        "@types/node": "^24.0.3",
        "rollup-plugin-esbuild": "^6.2.1",
        "rollup-plugin-summary": "^3.0.1",
        "rollup": "^4.44.0",
        "tslib": "2.8.1",
        "typescript": "catalog:"
    },
    "files": [
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "design system",
        "lit",
        "components",
        "web components"
    ]
}
