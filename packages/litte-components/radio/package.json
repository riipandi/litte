{
    "name": "@litte/radio",
    "version": "0.0.30",
    "type": "module",
    "description": "UI components that you can use everywhere, designed for flexibility.",
    "author": "Aris Ripandi <aris@duck.com>",
    "license": "MIT",
    "homepage": "https://litte.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/litte"
    },
    "bugs": {
        "url": "https://github.com/riipandi/litte/issues"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "rollup --config rollup.config.js",
        "dev": "rollup --watch --config rollup.config.js",
        "cleanup": "pnpm dlx del-cli dist node_modules .turbo",
        "prepublishOnly": "NODE_ENV=production rollup --config rollup.config.js",
        "publish:dry": "NODE_ENV=production pnpm publish --dry-run --no-git-checks",
        "publish:npm": "NODE_ENV=production pnpm publish --no-git-checks",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "lit": "^3.3.1"
    },
    "dependencies": {
        "@litte/element": "workspace:*",
        "lit": "^3.3.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@repo/rollup-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^24.7.0",
        "rollup": "^4.52.4",
        "tslib": "2.8.1",
        "typescript": "catalog:"
    },
    "files": [
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "design system",
        "component-library",
        "ui-kit",
        "lit",
        "components",
        "web components"
    ]
}
