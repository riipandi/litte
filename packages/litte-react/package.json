{
    "name": "@litte/react",
    "version": "0.0.24",
    "type": "module",
    "description": "UI components that you can use everywhere, designed for flexibility.",
    "author": "Aris Ripandi <aris@duck.com>",
    "license": "MIT",
    "homepage": "https://litte.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/litte"
    },
    "bugs": {
        "url": "https://github.com/riipandi/litte/issues"
    },
    "exports": {
        ".": "./dist/index.js",
        "./button": "./dist/button/index.js"
    },
    "scripts": {
        "build": "vite build",
        "dev": "NODE_ENV=development vite build --watch",
        "cleanup": "pnpm dlx del-cli dist node_modules .turbo",
        "publish:dry": "NODE_ENV=production pnpm publish --dry-run --no-git-checks",
        "publish:npm": "NODE_ENV=production pnpm publish --no-git-checks",
        "prepublishOnly": "NODE_ENV=production vite build",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": "^18.0 || ^19.0",
        "react-dom": "^18.0 || ^19.0"
    },
    "dependencies": {
        "@lit/react": "^1.0.8",
        "@litte/action-bar": "workspace:*",
        "@litte/alert": "workspace:*",
        "@litte/autocomplete": "workspace:*",
        "@litte/avatar": "workspace:*",
        "@litte/badge": "workspace:*",
        "@litte/breadcrumbs": "workspace:*",
        "@litte/button": "workspace:*",
        "@litte/calendar": "workspace:*",
        "@litte/card": "workspace:*",
        "@litte/carousel": "workspace:*",
        "@litte/checkbox": "workspace:*",
        "@litte/context-menu": "workspace:*",
        "@litte/divider": "workspace:*",
        "@litte/dropdown-menu": "workspace:*",
        "@litte/element": "workspace:*",
        "@litte/file-upload": "workspace:*",
        "@litte/hotkey": "workspace:*",
        "@litte/link": "workspace:*",
        "@litte/loader": "workspace:*",
        "@litte/menu-item": "workspace:*",
        "@litte/modal-dialog": "workspace:*",
        "@litte/number-field": "workspace:*",
        "@litte/overlay": "workspace:*",
        "@litte/pagination": "workspace:*",
        "@litte/pin-field": "workspace:*",
        "@litte/popover": "workspace:*",
        "@litte/progress-bar": "workspace:*",
        "@litte/progress-indicator": "workspace:*",
        "@litte/radio": "workspace:*",
        "@litte/select": "workspace:*",
        "@litte/skeleton": "workspace:*",
        "@litte/slider": "workspace:*",
        "@litte/stepper": "workspace:*",
        "@litte/switch": "workspace:*",
        "@litte/table": "workspace:*",
        "@litte/tabs": "workspace:*",
        "@litte/text-area": "workspace:*",
        "@litte/text-field": "workspace:*",
        "@litte/timeline": "workspace:*",
        "@litte/toast": "workspace:*",
        "@litte/toggle-button": "workspace:*",
        "@litte/tooltip": "workspace:*",
        "clsx": "^2.1.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@repo/typescript-config": "workspace:*",
        "@repo/vite-plugin-tailwindcss": "workspace:*",
        "@types/node": "^24.7.0",
        "@types/react": "19.2.0",
        "@vitejs/plugin-react": "^5.0.4",
        "fast-glob": "^3.3.3",
        "typescript": "catalog:",
        "vite": "^7.1.9",
        "vite-plugin-dts": "^4.5.4",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "files": [
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "design system",
        "component-library",
        "ui-kit",
        "react",
        "components",
        "web components"
    ]
}
