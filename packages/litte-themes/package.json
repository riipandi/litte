{
    "name": "@litte/themes",
    "version": "0.0.28",
    "type": "module",
    "description": "UI components that you can use everywhere, designed for flexibility.",
    "author": "Aris Ripandi <aris@duck.com>",
    "license": "MIT",
    "homepage": "https://litte.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/litte"
    },
    "bugs": {
        "url": "https://github.com/riipandi/litte/issues"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./default/*": "./dist/themes/default/*"
    },
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "cleanup": "pnpm dlx del-cli dist node_modules .turbo",
        "publish:dry": "NODE_ENV=production pnpm publish --dry-run --no-git-checks",
        "publish:npm": "NODE_ENV=production pnpm publish --no-git-checks",
        "prepublishOnly": "NODE_ENV=production vite build",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "clsx": "^2.1.1"
    },
    "dependencies": {
        "clsx": "^2.1.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^24.7.0",
        "cssnano": "^7.1.1",
        "fast-glob": "^3.3.3",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-load-config": "^6.0.1",
        "typescript": "catalog:",
        "vite": "^7.1.9",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-static-copy": "^3.1.3",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "files": [
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "design system",
        "component-library",
        "ui-kit",
        "lit",
        "components",
        "web components"
    ]
}
