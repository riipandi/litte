{
    "name": "@litte/cli",
    "version": "0.0.43",
    "type": "module",
    "description": "Litte Command Line Interface.",
    "author": "Aris Ripandi <aris@duck.com>",
    "license": "MIT",
    "homepage": "https://litte.dev",
    "funding": "https://github.com/riipandi/litte?sponsor=1",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/litte"
    },
    "bugs": {
        "url": "https://github.com/riipandi/litte/issues"
    },
    "main": "./bin/litte.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.mjs",
        "./cli": "./bin/litte.mjs"
    },
    "bin": {
        "litte": "./bin/litte.mjs"
    },
    "scripts": {
        "build": "unbuild",
        "build:stub": "unbuild --stub",
        "dev:prepare": "unbuild --stub",
        "dev": "pnpm build &>/dev/null && pnpm -s litte",
        "cleanup": "pnpm dlx del-cli dist node_modules .turbo",
        "prepublishOnly": "NODE_ENV=production unbuild",
        "publish:npm": "NODE_ENV=production pnpm publish --no-git-checks",
        "publish:npm-dry": "NODE_ENV=production pnpm publish --no-git-checks --dry-run",
        "publish:jsr": "pnpm dlx jsr publish --allow-dirty",
        "publish:jsr-dry": "pnpm dlx jsr publish --allow-dirty --dry-run",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "prepack": "pnpm --silent run build",
        "pre-commit": "lefthook run pre-commit --force",
        "postinstall": "lefthook install || true",
        "litte": "node ./bin/litte.mjs",
        "typecheck": "tsc -b --noEmit"
    },
    "dependencies": {
        "citty": "^0.1.6",
        "consola": "^3.4.2"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "@types/node": "^24.9.1",
        "rollup": "^4.52.5",
        "typescript": "catalog:",
        "unbuild": "^3.6.1",
        "unplugin-purge-polyfills": "^0.1.0"
    },
    "files": [
        "bin/**/*",
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public",
        "executableFiles": [
            "./bin/litte.mjs"
        ]
    },
    "keywords": [
        "litte",
        "cli",
        "command-line",
        "utilities"
    ]
}
